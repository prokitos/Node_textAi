generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  User
}

model User {
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String 
  role Role @default(User)
  credits Float @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  @@map("users")
}

model Model {
  id Int @id @default(autoincrement())
  name String 
  rate_for_hundred Float @default(10)
  
  @@map("models")
}